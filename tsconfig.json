{
  "compilerOptions": {
    "rootDir": "test/",
    // Language and Environment
    "target": "ES2022",
    "lib": ["ESNext", "DOM"],
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    // Modules
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    // Emit
    "outDir": "test-typescript",
    "sourceMap": true,
    // Type checking
    "strict": true,
    // Interop constraints
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["test/**/*"]
}
